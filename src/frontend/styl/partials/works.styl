.hover-animation
	position relative

	&__title
	&__caption
		margin 0

	&__title
		font-size 20px

	&__wrapper
		position relative
		min-width 100%
		max-width 100%
		margin auto
		background $color-brown
		text-align center
		cursor pointer

		&:hover
			.hover-animation__image
				opacity 0.4

			.hover-animation__text-block
				&::before
				&::after
					opacity 1
					transform scale(1)

			.hover-animation__title
			.hover-animation__caption
				opacity 1
				transform translate3d(0, 0, 0)

	&__image
		display block
		max-width 100%
		transition opacity $delay_mid

	&__text-block
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		padding $indent-large
		color white
		font-size $font-size-medium

		&::before
		&::after
			position absolute
			top $indent-medium
			right $indent-medium
			bottom $indent-medium
			left $indent-medium
			content ''
			opacity 0
			transition opacity $delay_mid, transform $delay_mid
			pointer-events none

		&::before
			border-top 1px solid white
			border-bottom 1px solid white
			transform scale(0, 1)

		&::after
			border-right 1px solid white
			border-left 1px solid white
			transform scale(1, 0)

	&__title
		padding-top 10%
		transition transform $delay_mid
		transform translateY(-($indent-default))
		font-weight 300
		color white

		span
			font-weight 800

	&__caption
		padding $indent-default
		opacity 0
		transition opacity $delay_mid, transform $delay_mid
		transform translateY($indent-default)
		letter-spacing 1px
		font-size $font-size-small
